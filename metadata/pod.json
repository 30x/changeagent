{
	"apiVersion": "v1",
	"kind": "Pod",
	"metadata": {
		"name": "${APP_NAME}",
    "labels": {
        "app": "${APP_NAME}"
    },
		"annotations": {
      "publicPaths": "8080:/changeagent",
			"projectcalico.org/policy": "allow tcp"
		}
	},
	"spec": {
		"imagePullSecrets": [{
			"name": "ecr-key"
		}],
		"containers": [{
			"args": ["-P", "changeagent"],
			"name": "${APP_NAME}",
			"image": "${IMAGE_URL}:latest",
			"ports": [{
				"containerPort": 8080
			}]
		}]
	}
}
